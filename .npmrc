# Security configurations
audit-level=moderate
fund=false
package-lock=true

# Prevent automatic execution of scripts
ignore-scripts=false

# Use exact versions for security
save-exact=false

# Registry security
registry=https://registry.npmjs.org/

# Disable automatic updates that could introduce vulnerabilities
update-notifier=false

# Enable strict SSL
strict-ssl=true

# Timeout settings
timeout=60000 